{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
